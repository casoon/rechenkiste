---
import BaseLayout from "@layouts/BaseLayout.astro";
import { t } from "@i18n/translations";
import type { Locale } from "@i18n/translations";
import { loadSession, getCurrentTask } from "@domain/session";
import { renderTaskFragment } from "@services/task-renderer";

const locale: Locale = "en";

const session = await loadSession(Astro);
if (!session) {
    return Astro.redirect("/en");
}

const currentTask = getCurrentTask(session);
if (!currentTask) {
    return Astro.redirect("/en/ergebnis");
}

const progress = Math.round((session.currentIndex / session.totalTasks) * 100);
const taskHtml = await renderTaskFragment(currentTask, session.id, locale);
---

<BaseLayout
    title={t(locale, "taskOf", {
        current: session.currentIndex + 1,
        total: session.totalTasks,
    })}
    locale={locale}
>
    <div
        class="glass-card-strong p-6 md:p-10 max-w-2xl w-full"
        transition:name="main-card"
    >
        <div class="mb-6" transition:name="progress">
            <div class="flex justify-between items-center mb-2">
                <span class="text-lg font-bold text-purple-700">
                    {
                        t(locale, "taskOf", {
                            current: session.currentIndex + 1,
                            total: session.totalTasks,
                        })
                    }
                </span>
                <span class="text-lg font-bold text-purple-700"
                    >{progress}%</span
                >
            </div>
            <div class="progress-bar">
                <div
                    class="progress-fill"
                    style={`width: ${progress}%`}
                    transition:animate="none"
                >
                </div>
            </div>
        </div>
        <div
            id="task-container"
            class="task-container"
            transition:name="task"
            set:html={taskHtml}
        />
    </div>
</BaseLayout>

<script>
    document.addEventListener("htmx:afterSwap", (event) => {
        const target = (event as CustomEvent).detail.target;
        if (target.id === "feedback-container" && target.innerHTML.trim()) {
            const form = document.getElementById("answer-form");
            if (form) form.style.display = "none";
        }
    });
</script>
