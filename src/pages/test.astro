---
import BaseLayout from "@layouts/BaseLayout.astro";
import { t, getLocaleFromUrl } from "@i18n/translations";
import type { Locale } from "@i18n/translations";
import { loadSession, getCurrentTask } from "@domain/session";
import { renderTaskFragment } from "@services/task-renderer";

const locale: Locale = getLocaleFromUrl(Astro.url);

const session = await loadSession(Astro);
if (!session) {
    return Astro.redirect("/");
}

const currentTask = getCurrentTask(session);
if (!currentTask) {
    return Astro.redirect("/ergebnis");
}

const progress = Math.round((session.currentIndex / session.totalTasks) * 100);

const taskHtml = await renderTaskFragment(currentTask, session.id, locale);
---

<BaseLayout
    title={t(locale, "taskOf", {
        current: session.currentIndex + 1,
        total: session.totalTasks,
    })}
    locale={locale}
>
    <div
        class="glass-card-strong p-6 md:p-10 max-w-2xl w-full"
        transition:name="main-card"
    >
        <div class="mb-6" transition:name="progress">
            <div class="flex justify-between items-center mb-2">
                <span class="text-lg font-bold text-purple-700">
                    {
                        t(locale, "taskOf", {
                            current: session.currentIndex + 1,
                            total: session.totalTasks,
                        })
                    }
                </span>
                <span class="text-lg font-bold text-purple-700">
                    {progress}%
                </span>
            </div>
            <div class="progress-bar">
                <div
                    class="progress-fill"
                    style={`width: ${progress}%`}
                    transition:animate="none"
                >
                </div>
            </div>
        </div>

        <div
            id="task-container"
            class="task-container"
            transition:name="task"
            set:html={taskHtml}
        />
    </div>
</BaseLayout>

<script>
    function updateProgress(current: number, total: number, percent: number) {
        const labels = document.querySelectorAll(
            ".text-lg.font-bold.text-purple-700",
        );
        if (labels.length >= 2) {
            labels[0].textContent = `Aufgabe ${current} von ${total}`;
            labels[1].textContent = `${percent}%`;
        }
        const progressFill = document.querySelector(
            ".progress-fill",
        ) as HTMLElement;
        if (progressFill) {
            progressFill.style.width = `${percent}%`;
        }
    }

    document.addEventListener("htmx:afterSwap", (event) => {
        const target = (event as CustomEvent).detail.target;

        // Feedback-Container: Formular ausblenden
        if (target.id === "feedback-container" && target.innerHTML.trim()) {
            const form = document.getElementById("answer-form");
            if (form) {
                form.style.display = "none";
            }
        }

        // Task-Container: Progress aktualisieren
        if (target.id === "task-container") {
            const wrapper = document.getElementById("task-wrapper");
            if (wrapper) {
                const current = parseInt(wrapper.dataset.current || "1");
                const total = parseInt(wrapper.dataset.total || "10");
                const percent = parseInt(wrapper.dataset.percent || "0");
                updateProgress(current, total, percent);
            }
        }
    });
</script>
